                              title="Vérification de la conformité du document aux spécifications du CI-SIS"
                              schemaVersion="CI-SIS_TLM-CR_2021.01.sch">
         <xsl:attribute name="phase">CI-SIS_TLM-CR_2021.01</xsl:attribute>
